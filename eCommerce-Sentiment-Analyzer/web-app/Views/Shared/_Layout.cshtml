@using System.Security.Claims
@using _221229064_BitirmeProjesi.Manager
@using _221229064_BitirmeProjesi.Enums
@inject HtmlAuthorityManager AuthorityManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ürün Yorum Analizi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_221229064_BitirmeProjesi.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ürün Yorum Analizi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(RoleEnum.User, RoleEnum.Admin)" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.onAuthenticate()" class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Index">Kayıt Ol</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.onAuthenticate()" class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Giriş Yap</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(RoleEnum.Admin)" class="nav-link text-dark" asp-area="" asp-controller="Panel" asp-action="Index">Admin Paneli</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(RoleEnum.Admin, RoleEnum.User)" class="nav-link text-dark" asp-area="" asp-controller="DataExtraction" asp-action="Index">Veri Çekme</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(RoleEnum.Admin, RoleEnum.User)" class="nav-link text-dark" asp-area="" asp-controller="DataPreProcess" asp-action="Index">Veri Ön İşleme</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(RoleEnum.Admin, RoleEnum.User)" class="nav-link text-dark" asp-area="" asp-controller="ManualLabel" asp-action="Index">Veri Manuel Etiketleme</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(RoleEnum.Admin, RoleEnum.User)" class="nav-link text-dark" asp-area="" asp-controller="AutomaticLabel" asp-action="Index">Veri Otomatik Etiketleme</a>
                        </li>
                    </ul>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <p class="user_name">Hoş geldin, @User.FindFirst(ClaimTypes.Name)?.Value</p>
                    }
                    else
                    {
                        <p class="user_name">Giriş yapmış bir kullanıcı yok.</p>
                    }
                </div>
            </div>
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <form asp-controller="Login" asp-action="Logout" method="post">
                    <button type="submit"> Çıkış Yap </button>
                </form>
            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Ürün Yorum Analizi
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
